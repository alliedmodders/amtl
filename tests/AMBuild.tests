import os

binary = KE.Program(builder, 'testrunner')
compiler = binary.compiler
compiler.includes += [
  os.path.join(builder.sourcePath, 'amtl'),
  os.path.join(builder.sourcePath),
]

if compiler.like('msvc'):
  compiler.linkflags.append('/SUBSYSTEM:CONSOLE')
if builder.target_platform == 'linux':
  compiler.linkflags.append('-ldl')

binary.sources += [
  'main.cpp',
  'test-callable.cpp',
  'test-hashmap.cpp',
  'test-inlinelist.cpp',
  'test-linkedlist.cpp',
  'test-vector.cpp',
  'test-refcounting.cpp',
  'test-threadlocal-threaded.cpp',
  'test-threadlocal-unthreaded.cpp',
  'test-threadutils.cpp',
  'test-deque.cpp',
  'test-system.cpp',
  'test-priority-queue.cpp',
  'test-string.cpp',
  'test-autoptr.cpp',
  'test-uniqueptr.cpp',
]

builder.Add(binary)
